<%- include('partials/header') %>

<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <a href="/patients" class="text-blue-600 hover:text-blue-800 flex items-center">
      ‚Üê Back to Patient List
    </a>
  </div>

  <div class="bg-white rounded-lg shadow-lg p-6">
    <h1 class="text-3xl font-bold mb-6">Patient Details</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h2 class="text-xl font-semibold mb-4">Patient Information</h2>
        <div class="space-y-3">
          <div>
            <span class="font-medium text-gray-700">Patient Name:</span>
            <span class="ml-2 text-gray-900"><%= patient.patientName %></span>
          </div>
          <div>
            <span class="font-medium text-gray-700">Patient ID:</span>
            <span class="ml-2 text-gray-900"><%= patient.patientId %></span>
          </div>
          <div>
            <span class="font-medium text-gray-700">Consultation Date:</span>
            <span class="ml-2 text-gray-900"><%= patient.createdAt.toLocaleDateString() %></span>
          </div>
          <div>
            <span class="font-medium text-gray-700">Time:</span>
            <span class="ml-2 text-gray-900"><%= patient.createdAt.toLocaleTimeString() %></span>
          </div>
        </div>
      </div>
      
      <div>
        <h2 class="text-xl font-semibold mb-4">Actions</h2>
        <div class="space-y-2">
          <!-- Actions removed -->
        </div>
      </div>
    </div>

    <div class="mt-8">
      <h2 class="text-xl font-semibold mb-4">Consultation Summary</h2>
      <div class="bg-gray-50 rounded-lg p-4">
        <pre class="whitespace-pre-wrap text-sm text-gray-800"><%= patient.reportText %></pre>
      </div>
    </div>

    <div class="mt-8">
      <h2 class="text-xl font-semibold mb-4">Conversation History</h2>
      <div class="space-y-4 max-h-96 overflow-y-auto">
        <% patient.conversation.forEach((entry, index) => { %>
          <div class="<%= entry.role === 'user' ? 'bg-blue-50' : 'bg-gray-50' %> rounded-lg p-4">
            <div class="font-medium text-sm text-gray-600 mb-2">
              <%= entry.role === 'user' ? 'Patient' : 'Doctor' %>
            </div>
            <div class="text-gray-800">
              <%= entry.parts[0].text %>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %> 